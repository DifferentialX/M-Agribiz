<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Agribiz.Views.ProductDetailPage"
			 Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Product.Title}" FontSize="Medium"/>
        <Label Text="{Binding Product.Description}" FontSize="Small"/>
        <Label FormattedText="Price: " Text="{Binding Product.Price}" FontSize="Small"/>
        <Label Text="{Binding Product.Quantity}" FontSize="Small"/>
    </StackLayout>
</ContentPage>